Hostname "{{ ansible_fqdn }}"
# Don't trust reverse lookups on IP
FQDNLookup false
Interval 1

LoadPlugin virt
LoadPlugin write_graphite

<Plugin virt>
        Connection "qemu:///system"
        RefreshInterval 60
        HostnameFormat hostname
        InterfaceFormat address
        PluginInstanceFormat uuid
</Plugin>

<Plugin write_graphite>
        <Node "graphite">
                Host "localhost"
                Port "2023"
                Protocol "udp"
                Prefix "ogm."
        </Node>
</Plugin>
